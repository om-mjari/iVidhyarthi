# iVidhyarthi Backend Environment Variables
# Copy this file to .env and fill in your actual values

# MongoDB Connection
MONGODB_URI=mongodb+srv://your_username:your_password@cluster.mongodb.net/ividhyarthi?retryWrites=true&w=majority

# Server Configuration
PORT=5000
NODE_ENV=development

# Email Configuration (Gmail)
EMAIL_USER=your-email@gmail.com
EMAIL_APP_PASSWORD=your-16-digit-app-password

# File Upload
MAX_FILE_SIZE=52428800
ALLOWED_FILE_TYPES=image/png,image/jpeg,image/jpg,video/mp4

# Razorpay Configuration (TEST MODE)
# Get your keys from: https://dashboard.razorpay.com/app/website-app-settings/api-keys
RAZORPAY_KEY_ID=rzp_test_your_key_id_here
RAZORPAY_KEY_SECRET=your_razorpay_secret_here

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Zoom API Configuration (Server-to-Server OAuth)
# Required for automatic Zoom meeting creation in Sessions
# Get credentials from: https://marketplace.zoom.us/ → Your App → App Credentials
# See ZOOM_SESSIONS_SETUP.md for detailed setup instructions
ZOOM_ACCOUNT_ID=your_zoom_account_id
ZOOM_CLIENT_ID=your_zoom_client_id
ZOOM_CLIENT_SECRET=your_zoom_client_secret

# Note: System works without Zoom credentials (sessions created without URLs)
# This is useful for local development and testing
