# iVidhyarthi Backend Environment Variables
# Copy this file to .env and fill in your actual values

# MongoDB Connection
MONGODB_URI=mongodb+srv://your_username:your_password@cluster.mongodb.net/ividhyarthi?retryWrites=true&w=majority

# Server Configuration
PORT=5000
NODE_ENV=development

# Email Configuration (Gmail)
EMAIL_USER=your-email@gmail.com
EMAIL_APP_PASSWORD=your-16-digit-app-password

# File Upload
MAX_FILE_SIZE=52428800
ALLOWED_FILE_TYPES=image/png,image/jpeg,image/jpg,video/mp4

# Razorpay Configuration (TEST MODE)
# Get your keys from: https://dashboard.razorpay.com/app/website-app-settings/api-keys
RAZORPAY_KEY_ID=rzp_test_your_key_id_here
RAZORPAY_KEY_SECRET=your_razorpay_secret_here

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173
