  outline: none;
  border-color: rgba(59, 130, 246, 0.6);
  box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
}

.filter-select option {
  background: #1e293b;
  color: #f8fafc;
}

/* Approvals Table */
.approvals-table {
  background: rgba(15, 23, 42, 0.8);
  backdrop-filter: blur(20px);
  border-radius: 12px;
  overflow: hidden;
  border: 1px solid rgba(59, 130, 246, 0.2);
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
}

.approvals-table table {
  width: 100%;
  border-collapse: collapse;
}

.approvals-table thead {
  background: rgba(15, 23, 42, 0.95);
}

.approvals-table th {
  color: #f8fafc;
  padding: 1rem;
  text-align: left;
  font-weight: 600;
  border-bottom: 2px solid rgba(59, 130, 246, 0.3);
  font-size: 0.9rem;
  letter-spacing: 0.025em;
  white-space: nowrap;
}

.approvals-table th.sortable {
  cursor: pointer;
  user-select: none;
  transition: background 0.2s ease;
}

.approvals-table th.sortable:hover {
  background: rgba(59, 130, 246, 0.1);
}

.sort-header {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  justify-content: space-between;
}

.sort-indicator {
  font-size: 0.8rem;
  color: rgba(255, 255, 255, 0.5);
  transition: all 0.2s ease;
}

.sort-indicator.active {
  color: #3b82f6;
  font-weight: 700;
}

.approvals-table td {
  padding: 1rem;
  color: #e2e8f0;
  border-bottom: 1px solid rgba(59, 130, 246, 0.1);
  font-size: 0.9rem;
  background: transparent;
}

.approvals-table tbody tr {
  transition: all 0.2s ease;
}

.approvals-table tbody tr:hover {
  background: rgba(59, 130, 246, 0.08);
}

/* University Name Cell */
.university-name {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  font-weight: 600;
  color: #ffffff;
}

.new-badge {
  background: linear-gradient(135deg, #f59e0b, #d97706);
  color: white;
  padding: 0.15rem 0.5rem;
  border-radius: 12px;
  font-size: 0.7rem;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

/* Location Cell */
.location-cell {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  color: rgba(255, 255, 255, 0.9);
}

.location-icon {
  font-size: 1rem;
}

/* Contact Link */
.contact-link {
  color: #3b82f6;
  text-decoration: none;
  font-weight: 500;
  transition: all 0.2s ease;
}

.contact-link:hover {
  color: #60a5fa;
  text-decoration: underline;
}

/* Website Link */
.website-link {
  color: #3b82f6;
  text-decoration: none;
  font-weight: 500;
  transition: all 0.2s ease;
  display: inline-flex;
  align-items: center;
  gap: 0.3rem;
}

.website-link:hover {
  color: #60a5fa;
  text-decoration: underline;
}

.website-link::after {
  content: '';
  font-size: 0.8rem;
  opacity: 0.7;
}

/* Status Badges for University Approvals */
.approvals-table .status-badge {
  padding: 0.35rem 0.85rem;
  border-radius: 20px;
  font-size: 0.75rem;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0.5px;
  white-space: nowrap;
  display: inline-flex;
  align-items: center;
  gap: 0.4rem;
}

.approvals-table .status-badge::before {
  content: '';
  width: 6px;
  height: 6px;
  border-radius: 50%;
  animation: pulse 2s ease-in-out infinite;
}

.approvals-table .status-badge.pending {
  background: #F0A500;
  color: #000000;
  border: 1px solid rgba(240, 165, 0, 0.5);
}

.approvals-table .status-badge.pending::before {
  background: #000000;
}

.approvals-table .status-badge.approved,
.approvals-table .status-badge.verified {
  background: #2ECC71;
  color: #ffffff;
  border: 1px solid rgba(46, 204, 113, 0.5);
}

.approvals-table .status-badge.approved::before,
.approvals-table .status-badge.verified::before {
  background: #ffffff;
}

.approvals-table .status-badge.rejected {
  background: #E74C3C;
  color: #ffffff;
  border: 1px solid rgba(231, 76, 60, 0.5);
}

.approvals-table .status-badge.rejected::before {
  background: #ffffff;
}

/* Date Cell */
.date-cell {
  display: flex;
  flex-direction: column;
  gap: 0.2rem;
}

.date-cell .date {
  color: #ffffff;
  font-weight: 500;
}

.date-cell .time {
  color: rgba(255, 255, 255, 0.6);
  font-size: 0.8rem;
}

/* Action Buttons */
.action-buttons {
  display: flex;
  gap: 0.5rem;
  flex-wrap: wrap;
}

.approvals-table .btn-approve,
.approvals-table .btn-reject,
.approvals-table .btn-view {
  padding: 0.5rem 0.9rem;
  border: none;
  border-radius: 6px;
  font-size: 0.8rem;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.3s ease;
  display: inline-flex;
  align-items: center;
  gap: 0.4rem;
  white-space: nowrap;
}

.approvals-table .btn-approve {
  background: #2ECC71;
  color: white;
}

.approvals-table .btn-approve:hover:not(:disabled) {
  background: #27AE60;
  transform: translateY(-1px);
  box-shadow: 0 4px 12px rgba(46, 204, 113, 0.4);
}

.approvals-table .btn-approve:disabled {
  background: rgba(46, 204, 113, 0.3);
  cursor: not-allowed;
  opacity: 0.5;
}

.approvals-table .btn-reject {
  background: #E74C3C;
  color: white;
}

.approvals-table .btn-reject:hover:not(:disabled) {
  background: #C0392B;
  transform: translateY(-1px);
  box-shadow: 0 4px 12px rgba(231, 76, 60, 0.4);
}

.approvals-table .btn-reject:disabled {
  background: rgba(231, 76, 60, 0.3);
  cursor: not-allowed;
  opacity: 0.5;
}

.approvals-table .btn-view {
  background: #3498DB;
  color: white;
}

.approvals-table .btn-view:hover {
  background: #2980B9;
  transform: translateY(-1px);
  box-shadow: 0 4px 12px rgba(52, 152, 219, 0.4);
}

.btn-icon {
  font-size: 1rem;
  line-height: 1;
}

.btn-text {
  font-size: 0.8rem;
}

/* Loading and Empty States */
.loading-row,
.empty-state {
  text-align: center;
  padding: 3rem 2rem;
}

.loading-spinner {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 1rem;
}

.loading-spinner .spinner {
  width: 50px;
  height: 50px;
  border: 4px solid rgba(59, 130, 246, 0.2);
  border-top-color: #3b82f6;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

.loading-spinner span {
  color: rgba(255, 255, 255, 0.7);
  font-size: 1rem;
  font-weight: 600;
}

.empty-state {
  background: rgba(59, 130, 246, 0.05);
  border-radius: 12px;
}

.empty-icon {
  font-size: 4rem;
  margin-bottom: 1rem;
}

.empty-state h3 {
  color: #ffffff;
  font-size: 1.25rem;
  margin: 0 0 0.5rem 0;
  font-weight: 600;
}

.empty-state p {
  color: rgba(255, 255, 255, 0.7);
  margin: 0 0 1.5rem 0;
  font-size: 0.95rem;
}

.empty-state .btn-secondary {
  padding: 0.75rem 1.5rem;
  background: rgba(59, 130, 246, 0.2);
  color: #3b82f6;
  border: 1px solid rgba(59, 130, 246, 0.3);
  border-radius: 8px;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.2s ease;
  backdrop-filter: blur(10px);
  font-size: 0.9rem;
}

.empty-state .btn-secondary:hover {
  background: rgba(59, 130, 246, 0.3);
  transform: translateY(-1px);
  border-color: rgba(59, 130, 246, 0.5);
  box-shadow: 0 4px 12px rgba(59, 130, 246, 0.2);
}

/* ==================== RESPONSIVE DESIGN FOR UNIVERSITY APPROVALS ==================== */

@media (max-width: 768px) {
  .approvals-panel {
    padding: 1rem;
  }

  .approvals-header {
    flex-direction: column;
    align-items: flex-start;
  }

  .approvals-stats {
    width: 100%;
  }

  .stat-badge {
    flex: 1;
    justify-content: center;
  }

  .panel-controls {
    flex-direction: column;
  }

  .search-wrapper {
    min-width: 100%;
  }

  .filter-select {
    width: 100%;
  }

  .approvals-table {
    overflow-x: auto;
  }

  .approvals-table table {
    min-width: 1000px;
  }

  .action-buttons {
    flex-direction: column;
  }

  .approvals-table .btn-approve,
  .approvals-table .btn-reject,
  .approvals-table .btn-view {
    width: 100%;
    justify-content: center;
  }
}

@media (min-width: 769px) and (max-width: 1024px) {
  .approvals-table {
    font-size: 0.85rem;
  }

  .approvals-table th,
  .approvals-table td {
    padding: 0.75rem;
  }

  .action-buttons {
    flex-wrap: wrap;
  }
}

@media (min-width: 1025px) {
  .approvals-table {
    width: 100%;
  }
}