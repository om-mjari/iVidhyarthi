/* ============================================
   PREMIUM ADMIN DASHBOARD - WHITE THEME
   Modern, Clean, Professional Design
============================================ */

/* ============================================
   ANIMATIONS
============================================ */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes fadeUp {
  from {
    opacity: 0;
    transform: translateY(30px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(25px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes slideIn {
  from {
    opacity: 0;
    transform: translateX(-20px);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

@keyframes shimmer {
  0% {
    background-position: -200% center;
  }
  100% {
    background-position: 200% center;
  }
}

@keyframes pulse {
  0%, 100% {
    opacity: 1;
  }
  50% {
    opacity: 0.8;
  }
}

@keyframes floatShape {
  0%, 100% {
    transform: translate(0, 0) rotate(0deg);
  }
  25% {
    transform: translate(10px, -10px) rotate(3deg);
  }
  50% {
    transform: translate(-5px, -15px) rotate(-3deg);
  }
  75% {
    transform: translate(-8px, -8px) rotate(2deg);
  }
}

@keyframes glow {
  0%, 100% {
    box-shadow: 0 0 20px rgba(0, 184, 148, 0.3);
  }
  50% {
    box-shadow: 0 0 30px rgba(0, 184, 148, 0.5);
  }
}

/* ============================================
   MAIN CONTAINER
============================================ */
.admin-dashboard {
  height: 100vh;
  width: 100vw;
  background: linear-gradient(
    165deg,
    #f0f9ff 0%,
    #e0f2fe 25%,
    #f0fdf4 50%,
    #ecfdf5 75%,
    #f0fdfa 100%
  );
  display: flex;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Poppins', 'Inter', sans-serif;
  position: fixed;
  top: 0;
  left: 0;
  overflow: hidden;
}

.admin-dashboard::before {
  content: '';
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background:
    radial-gradient(circle at 15% 15%, rgba(0, 184, 148, 0.08) 0%, transparent 40%),
    radial-gradient(circle at 85% 85%, rgba(56, 189, 248, 0.06) 0%, transparent 40%),
    radial-gradient(circle at 50% 50%, rgba(134, 239, 172, 0.05) 0%, transparent 50%);
  pointer-events: none;
  z-index: 0;
  animation: floatShape 30s ease-in-out infinite;
}

/* Admin Sidebar */
.admin-sidebar {
  width: 300px;
  height: 100vh;
  background: linear-gradient(180deg, rgba(15, 23, 42, 0.98) 0%, rgba(30, 41, 59, 0.95) 100%);
  backdrop-filter: blur(24px);
  border-right: 1px solid rgba(59, 130, 246, 0.25);
  padding: 2rem 0;
  overflow-y: auto;
  flex-shrink: 0;
  display: flex;
  flex-direction: column;
  position: relative;
  z-index: 10;
  box-shadow: 6px 0 30px rgba(0, 0, 0, 0.35), inset -1px 0 0 rgba(59, 130, 246, 0.1);
}

.admin-header {
  padding: 0 2rem 2rem 2rem;
  border-bottom: 1px solid rgba(59, 130, 246, 0.2);
  margin-bottom: 2rem;
}

.admin-header h2 {
  margin: 0 0 0.5rem 0;
  font-size: 2.2rem;
  font-weight: 800;
  background: linear-gradient(135deg, #2A63FF 0%, #00D0A3 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  letter-spacing: -0.5px;
  text-shadow: 0 4px 12px rgba(42, 99, 255, 0.3);
  animation: titleGlow 3s ease-in-out infinite;
}

@keyframes titleGlow {
  0%, 100% { filter: drop-shadow(0 2px 8px rgba(42, 99, 255, 0.4)); }
  50% { filter: drop-shadow(0 4px 16px rgba(0, 208, 163, 0.6)); }
}

.admin-header p {
  margin: 0;
  color: #94a3b8;
  font-size: 1rem;
  font-weight: 600;
  letter-spacing: 0.5px;
  text-transform: uppercase;
}

/* Navigation */
.admin-nav {
  flex: 1;
  padding: 0 1rem;
}

.nav-item {
  width: 100%;
  display: flex;
  align-items: center;
  gap: 1rem;
  padding: 1rem 1.5rem;
  margin-bottom: 0.5rem;
  background: transparent;
  border: none;
  border-radius: 10px;
  color: #94a3b8;
  font-size: 0.9rem;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.2s ease;
  text-align: left;
  position: relative;
}

.nav-item:hover {
  background: rgba(59, 130, 246, 0.1);
  color: #3b82f6;
  transform: translateX(3px);
}

.nav-item.active {
  background: linear-gradient(145deg, #3454FF 0%, #6A8CFF 100%);
  color: #FFFFFF;
  border-radius: 12px;
  border-left: none;
  transform: translateX(0);
  font-weight: 700;
  box-shadow: 0 6px 20px rgba(52, 84, 255, 0.45), inset 0 1px 0 rgba(255, 255, 255, 0.2);
  animation: menuGlow 2s ease-in-out infinite;
}

@keyframes menuGlow {
  0%, 100% { box-shadow: 0 6px 20px rgba(52, 84, 255, 0.45), inset 0 1px 0 rgba(255, 255, 255, 0.2); }
  50% { box-shadow: 0 8px 28px rgba(106, 140, 255, 0.6), inset 0 1px 0 rgba(255, 255, 255, 0.3); }
}

.nav-item.active svg {
  color: #FFFFFF;
  filter: drop-shadow(0 2px 4px rgba(0, 0, 0, 0.3));
}

.nav-icon {
  font-size: 1.2rem;
  width: 24px;
  text-align: center;
}

.nav-label {
  flex: 1;
}

/* Admin Footer */
.admin-footer {
  padding: 2rem;
  border-top: 1px solid rgba(255, 255, 255, 0.2);
}

.logout-btn {
  width: 100%;
  padding: 1rem;
  background: linear-gradient(135deg, #dc2626 0%, #b91c1c 100%);
  color: white;
  border: none;
  border-radius: 8px;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.2s ease;
  box-shadow: 0 2px 8px rgba(220, 38, 38, 0.3);
  font-size: 0.9rem;
}

.logout-btn:hover {
  transform: translateY(-1px);
  box-shadow: 0 4px 12px rgba(220, 38, 38, 0.4);
  background: linear-gradient(135deg, #b91c1c 0%, #991b1b 100%);
}

/* Main Content Area */
.admin-content {
  flex: 1;
  height: 100vh;
  display: flex;
  flex-direction: column;
  position: relative;
  z-index: 5;
  overflow-y: auto;
}

.admin-content-header {
  background: linear-gradient(135deg, rgba(15, 23, 42, 0.92) 0%, rgba(30, 41, 59, 0.88) 100%);
  backdrop-filter: blur(24px);
  padding: 1.5rem 2.5rem;
  border-bottom: 1px solid rgba(59, 130, 246, 0.25);
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
  position: sticky;
  top: 0;
  z-index: 100;
}

.breadcrumb {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  color: #94a3b8;
  font-weight: 500;
  font-size: 0.9rem;
}

.breadcrumb span:last-child {
  color: #f8fafc;
  font-weight: 600;
}

.admin-user-info {
  display: flex;
  align-items: center;
  gap: 1rem;
  color: #f8fafc;
  font-weight: 600;
  background: rgba(255, 255, 255, 0.12);
  backdrop-filter: blur(16px);
  padding: 10px 20px;
  border-radius: 50px;
  box-shadow: 0 4px 16px rgba(0, 0, 0, 0.15), inset 0 1px 0 rgba(255, 255, 255, 0.2);
  transition: all 0.3s ease;
  border: 1px solid rgba(255, 255, 255, 0.1);
}

.admin-user-info:hover {
  background: rgba(255, 255, 255, 0.18);
  box-shadow: 0 6px 24px rgba(59, 130, 246, 0.3), inset 0 1px 0 rgba(255, 255, 255, 0.25);
  transform: translateY(-2px);
}

.admin-avatar {
  width: 42px;
  height: 42px;
  background: linear-gradient(145deg, #3b82f6 0%, #6366f1 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 1.3rem;
  box-shadow: 0 4px 12px rgba(59, 130, 246, 0.5), inset 0 1px 0 rgba(255, 255, 255, 0.3);
  border: 2px solid rgba(255, 255, 255, 0.2);
  transition: all 0.3s ease;
}

.admin-avatar:hover {
  transform: scale(1.08);
  box-shadow: 0 6px 18px rgba(99, 102, 241, 0.6);
}

/* Panel Content */
.admin-panel-content {
  flex: 1;
  padding: 2rem;
  overflow-y: auto;
}

/* Overview Panel */
.overview-panel h2 {
  margin: 0 0 2.5rem 0;
  font-size: 2.6rem;
  font-weight: 800;
  background: linear-gradient(135deg, #f8fafc 0%, #3b82f6 60%, #10b981 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  letter-spacing: -1px;
  filter: drop-shadow(0 2px 8px rgba(59, 130, 246, 0.3));
  animation: fadeUp 0.6s ease-out;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 1.5rem;
  margin-bottom: 3rem;
}

.stat-card {
  background: linear-gradient(165deg, rgba(31, 35, 48, 0.92) 0%, rgba(37, 44, 57, 0.88) 100%);
  backdrop-filter: blur(24px);
  border-radius: 20px;
  padding: 2rem;
  border: 1.5px solid rgba(59, 130, 246, 0.25);
  box-shadow: 0 15px 40px rgba(0, 0, 0, 0.22), inset 0 1px 0 rgba(255, 255, 255, 0.1);
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  display: flex;
  align-items: center;
  gap: 1.5rem;
  position: relative;
  overflow: hidden;
  animation: slideUp 0.6s ease-out;
}

@keyframes slideUp {
  from { opacity: 0; transform: translateY(30px); }
  to { opacity: 1; transform: translateY(0); }
}

.stat-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(59, 130, 246, 0.1), transparent);
  transition: left 0.6s ease;
}

.stat-card:hover::before {
  left: 100%;
}

.stat-card:hover {
  transform: translateY(-6px) scale(1.02);
  box-shadow: 0 20px 50px rgba(59, 130, 246, 0.25), inset 0 1px 0 rgba(255, 255, 255, 0.15);
  border-color: rgba(59, 130, 246, 0.45);
}

.stat-icon {
  font-size: 2.8rem;
  width: 70px;
  height: 70px;
  background: linear-gradient(145deg, #3b82f6 0%, #6366f1 100%);
  border-radius: 16px;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8px 24px rgba(59, 130, 246, 0.45), inset 0 1px 0 rgba(255, 255, 255, 0.2);
  transition: all 0.3s ease;
  position: relative;
  z-index: 1;
}

.stat-card:hover .stat-icon {
  transform: scale(1.1) rotate(5deg);
  box-shadow: 0 12px 32px rgba(99, 102, 241, 0.6);
}

.stat-content h3 {
  margin: 0 0 0.5rem 0;
  color: #f8fafc;
  font-size: 2.2rem;
  font-weight: 700;
  letter-spacing: -0.025em;
}

.stat-content p {
  margin: 0 0 0.5rem 0;
  color: #94a3b8;
  font-size: 1rem;
  font-weight: 500;
}

.stat-trend {
  color: #10b981;
  font-size: 0.85rem;
  font-weight: 600;
}

/* Quick Actions */
.quick-actions {
  background: linear-gradient(165deg, rgba(31, 35, 48, 0.92) 0%, rgba(37, 44, 57, 0.88) 100%);
  backdrop-filter: blur(24px);
  border-radius: 18px;
  padding: 2.5rem;
  border: 1.5px solid rgba(59, 130, 246, 0.25);
  box-shadow: 0 15px 40px rgba(0, 0, 0, 0.22), inset 0 1px 0 rgba(255, 255, 255, 0.1);
  animation: fadeUp 0.7s ease-out;
}

.quick-actions h3 {
  margin: 0 0 1.8rem 0;
  font-size: 1.8rem;
  font-weight: 800;
  background: linear-gradient(135deg, #f8fafc 0%, #94a3b8 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  letter-spacing: -0.5px;
}

.action-buttons {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: 1rem;
}

.action-btn {
  padding: 1rem 1.5rem;
  background: linear-gradient(135deg, rgba(59, 130, 246, 0.1) 0%, rgba(16, 185, 129, 0.05) 100%);
  color: #3b82f6;
  border: 1px solid rgba(59, 130, 246, 0.3);
  border-radius: 10px;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.2s ease;
  backdrop-filter: blur(10px);
  font-size: 0.9rem;
}

.action-btn:hover {
  background: linear-gradient(135deg, rgba(59, 130, 246, 0.2) 0%, rgba(16, 185, 129, 0.1) 100%);
  transform: translateY(-1px);
  border-color: rgba(59, 130, 246, 0.5);
  box-shadow: 0 4px 12px rgba(59, 130, 246, 0.2);
}

/* Panel Controls */
.panel-controls {
  display: flex;
  gap: 1rem;
  margin-bottom: 2rem;
  flex-wrap: wrap;
  align-items: center;
}

.btn-primary {
  padding: 0.75rem 1.5rem;
  background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%);
  color: white;
  border: none;
  border-radius: 8px;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.2s ease;
  box-shadow: 0 2px 8px rgba(59, 130, 246, 0.3);
  font-size: 0.9rem;
}

.btn-primary:hover {
  transform: translateY(-1px);
  box-shadow: 0 4px 12px rgba(59, 130, 246, 0.4);
  background: linear-gradient(135deg, #1d4ed8 0%, #1e40af 100%);
}

.btn-secondary {
  padding: 0.75rem 1.5rem;
  background: rgba(15, 23, 42, 0.8);
  color: #94a3b8;
  border: 1px solid rgba(59, 130, 246, 0.3);
  border-radius: 8px;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.2s ease;
  backdrop-filter: blur(10px);
  font-size: 0.9rem;
}

.btn-secondary:hover {
  background: rgba(15, 23, 42, 0.9);
  color: #f8fafc;
  transform: translateY(-1px);
  border-color: rgba(59, 130, 246, 0.5);
}

.search-input,
.filter-select {
  padding: 0.75rem 1rem;
  background: rgba(15, 23, 42, 0.8);
  border: 1px solid rgba(59, 130, 246, 0.3);
  border-radius: 8px;
  color: #f8fafc;
  backdrop-filter: blur(10px);
  font-size: 0.9rem;
  transition: all 0.2s ease;
}

.search-input:focus,
.filter-select:focus {
  outline: none;
  border-color: rgba(59, 130, 246, 0.6);
  box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
}

.search-input::placeholder {
  color: #94a3b8;
}

/* Tables */
.users-table,
.transactions-table {
  background: linear-gradient(165deg, rgba(31, 35, 48, 0.95) 0%, rgba(37, 44, 57, 0.92) 100%);
  backdrop-filter: blur(24px);
  border-radius: 18px;
  overflow: hidden;
  border: 1.5px solid rgba(59, 130, 246, 0.25);
  box-shadow: 0 15px 40px rgba(0, 0, 0, 0.25), inset 0 1px 0 rgba(255, 255, 255, 0.08);
  animation: fadeUp 0.6s ease-out;
}

.users-table table,
.transactions-table table {
  width: 100%;
  border-collapse: collapse;
}

.users-table th,
.transactions-table th {
  background: linear-gradient(135deg, rgba(59, 130, 246, 0.15) 0%, rgba(99, 102, 241, 0.1) 100%);
  color: #f8fafc;
  padding: 1.2rem 1.5rem;
  text-align: left;
  font-weight: 700;
  border-bottom: 2px solid rgba(59, 130, 246, 0.3);
  font-size: 0.95rem;
  letter-spacing: 0.5px;
  text-transform: uppercase;
}

.users-table td,
.transactions-table td {
  padding: 1rem;
  color: #e2e8f0;
  border-bottom: 1px solid rgba(59, 130, 246, 0.1);
  font-size: 0.9rem;
}

.users-table tr:hover,
.transactions-table tr:hover {
  background: linear-gradient(135deg, rgba(59, 130, 246, 0.12) 0%, rgba(16, 185, 129, 0.08) 100%);
  transform: scale(1.01);
  transition: all 0.3s ease;
  box-shadow: 0 4px 12px rgba(59, 130, 246, 0.15);
}

/* Badges */
.role-badge,
.status-badge {
  padding: 0.25rem 0.75rem;
  border-radius: 20px;
  font-size: 0.8rem;
  font-weight: 600;
  text-transform: uppercase;
}

.role-badge.student {
  background: rgba(59, 130, 246, 0.2);
  color: #3b82f6;
  border: 1px solid rgba(59, 130, 246, 0.3);
}

.role-badge.lecturer {
  background: rgba(139, 92, 246, 0.2);
  color: #8b5cf6;
  border: 1px solid rgba(139, 92, 246, 0.3);
}

.status-badge.active,
.status-badge.approved,
.status-badge.completed {
  background: rgba(16, 185, 129, 0.2);
  color: #10b981;
  border: 1px solid rgba(16, 185, 129, 0.3);
}

.status-badge.pending {
  background: rgba(245, 158, 11, 0.2);
  color: #f59e0b;
  border: 1px solid rgba(245, 158, 11, 0.3);
}

.status-badge.live {
  background: rgba(239, 68, 68, 0.2);
  color: #ef4444;
  border: 1px solid rgba(239, 68, 68, 0.3);
}

/* Action Buttons */
.btn-edit,
.btn-delete,
.btn-view,
.btn-approve,
.btn-reject,
.btn-verify,
.btn-refund,
.btn-monitor,
.btn-moderate,
.btn-end,
.btn-certificate {
  padding: 0.4rem 0.8rem;
  border: none;
  border-radius: 6px;
  font-size: 0.8rem;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.3s ease;
  margin-right: 0.5rem;
}

.btn-edit {
  background: linear-gradient(135deg, rgba(59, 130, 246, 0.15) 0%, rgba(99, 102, 241, 0.1) 100%);
  color: #3b82f6;
  border: 1.5px solid rgba(59, 130, 246, 0.4);
  padding: 0.6rem 1.2rem;
  border-radius: 20px;
  font-weight: 700;
  box-shadow: 0 2px 8px rgba(59, 130, 246, 0.2);
  transition: all 0.3s ease;
}

.btn-edit:hover {
  background: linear-gradient(135deg, rgba(59, 130, 246, 0.25) 0%, rgba(99, 102, 241, 0.2) 100%);
  transform: translateY(-2px);
  box-shadow: 0 6px 20px rgba(59, 130, 246, 0.35);
  border-color: rgba(99, 102, 241, 0.6);
}

.btn-edit svg {
  color: #3b82f6;
  filter: drop-shadow(0 1px 2px rgba(0, 0, 0, 0.15));
}

.btn-delete {
  background: linear-gradient(135deg, rgba(239, 68, 68, 0.15) 0%, rgba(220, 38, 38, 0.1) 100%);
  color: #ef4444;
  border: 1.5px solid rgba(239, 68, 68, 0.4);
  padding: 0.6rem 1.2rem;
  border-radius: 20px;
  font-weight: 700;
  box-shadow: 0 2px 8px rgba(239, 68, 68, 0.2);
  transition: all 0.3s ease;
}

.btn-delete:hover {
  background: linear-gradient(135deg, rgba(239, 68, 68, 0.25) 0%, rgba(220, 38, 38, 0.2) 100%);
  transform: translateY(-2px);
  box-shadow: 0 6px 20px rgba(239, 68, 68, 0.35);
  border-color: rgba(220, 38, 38, 0.6);
}

.btn-delete svg {
  color: #ef4444;
  filter: drop-shadow(0 1px 2px rgba(0, 0, 0, 0.15));
}

.btn-view {
  background: rgba(107, 114, 128, 0.2);
  color: #6b7280;
  border: 1px solid rgba(107, 114, 128, 0.3);
}

.btn-approve {
  background: linear-gradient(135deg, #10b981 0%, #059669 100%);
  color: #FFFFFF;
  border: none;
  padding: 0.6rem 1.2rem;
  border-radius: 24px;
  font-weight: 700;
  box-shadow: 0 4px 16px rgba(16, 185, 129, 0.4), inset 0 1px 0 rgba(255, 255, 255, 0.2);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.btn-approve::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  transition: left 0.5s ease;
}

.btn-approve:hover::before {
  left: 100%;
}

.btn-approve:hover {
  transform: translateY(-2px) scale(1.05);
  box-shadow: 0 8px 28px rgba(16, 185, 129, 0.6), inset 0 1px 0 rgba(255, 255, 255, 0.3);
  background: linear-gradient(135deg, #059669 0%, #047857 100%);
}

.btn-approve svg {
  color: #FFFFFF;
  fill: #FFFFFF;
  filter: drop-shadow(0 1px 2px rgba(0, 0, 0, 0.3));
}

.btn-reject {
  background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
  color: #FFFFFF;
  border: none;
  padding: 0.6rem 1.2rem;
  border-radius: 24px;
  font-weight: 700;
  box-shadow: 0 4px 16px rgba(239, 68, 68, 0.4), inset 0 1px 0 rgba(255, 255, 255, 0.2);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.btn-reject::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
